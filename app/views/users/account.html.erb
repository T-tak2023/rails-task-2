<div class="bg-light w-75 mx-auto mt-5 mb-3 d-flex flex-column align-items-center">
  <div class="d-flex flex-row justify-content-between w-50 py-4">
    <h3>アカウント情報</h3>
    <%= link_to 'プロフィール ', users_profile_path, class:"btn btn-primary" %>
  </div>

  <table class="table table-info table-bordered text-center w-50 my-2">
    <tr>
      <th>ユーザー名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>パスワード</th>
      <td>********</td>
    </tr>
  </table>

  <div class="mt-3 mb-4">
    <%= link_to '編集する', edit_user_registration_path, class:"btn btn-outline-dark" %>
  </div>
</div>
