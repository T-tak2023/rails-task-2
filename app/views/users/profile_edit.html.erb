<div class="bg-light w-75 mx-auto mt-5 mb-3 d-flex flex-column align-items-center">

  <h3 class="my-4">プロフィール編集</h3>
  <%= form_with(model: @user, url: users_profile_edit_path, local:true) do |f| %>
    <table>
      <tr>
        <th><%= f.label :name,"名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th><%= f.label :icon_image,"アイコン画像" %></th>
        <td><%= f.file_field :icon_image %></td>
      </tr>
      <tr>
        <th><%= f.label :introduction,"自己紹介" %></th>
        <td><%= f.text_area :introduction %></td>
      </tr>
    </table>
    <div class="my-3 text-center">
      <%= f.submit "編集を完了する", class:"btn btn-success" %>
    </div>
  <% end %>
  <%= link_to '戻る', :back %>
</div>
